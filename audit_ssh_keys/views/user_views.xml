<odoo>
    <data>
        <record model="ir.ui.view" id="audit_ssh_keys.user_list">
            <field name="name">audit_ssh_keys.user.list</field>
            <field name="model">audit_ssh_keys.user</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <button name="view" string="view" type="object"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="audit_ssh_keys.user_form">
            <field name="name">audit_ssh_keys.user.form</field>
            <field name="model">audit_ssh_keys.user</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <form string="Users">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="keys_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>