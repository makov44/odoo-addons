<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="audit_ssh_keys.list">
      <field name="name">audit_ssh_keys list</field>
      <field name="model">audit_ssh_keys.host</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="environment"/>
          <field name="description"/>
          <field name="users_nbr"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="audit_ssh_keys.action_window">
      <field name="name">Hosts</field>
      <field name="res_model">audit_ssh_keys.host</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->
