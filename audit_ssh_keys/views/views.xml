    <!-- Top menu item -->

    <menuitem name="Audit" id="audit_ssh_keys.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Hosts" id="audit_ssh_keys.menu" parent="audit_ssh_keys.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="audit_ssh_keys.menu_list" parent="audit_ssh_keys.menu"
              action="audit_ssh_keys.action_window"/>

  </data>
</odoo>