<odoo>
  <data>
    <!-- Host -->

    <record model="ir.ui.view" id="audit_ssh_keys.host_list">
      <field name="name">audit_ssh_keys.host.list</field>
      <field name="model">audit_ssh_keys.host</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="environment"/>
          <field name="description"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="audit_ssh_keys.host_form">
            <field name="name">audit_ssh_keys.host.form</field>
            <field name="model">audit_ssh_keys.host</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <form string="Hosts">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="description"/>
                            <field name="environment"/>
                        </group>
                        <group>
                            <field name="users_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
    </record>

    <!-- User -->
     <record model="ir.ui.view" id="audit_ssh_keys.user_list">
      <field name="name">audit_ssh_keys.user.list</field>
      <field name="model">audit_ssh_keys.user</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
          <button name="view" string="view" type="object"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="audit_ssh_keys.user_form">
            <field name="name">audit_ssh_keys.user.form</field>
            <field name="model">audit_ssh_keys.user</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <form string="Users">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="description"/>
                        </group>
                       <group>
                         <field name="keys_ids"/>
                       </group>
                    </sheet>
                </form>
            </field>
    </record>

    <!-- Keys -->
     <record model="ir.ui.view" id="audit_ssh_keys.key_list">
      <field name="name">audit_ssh_keys.key.list</field>
      <field name="model">audit_ssh_keys.key</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="key_type"/>
          <field name="description"/>
          <button name="view" string="view" type="object"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="audit_ssh_keys.key_form">
            <field name="name">audit_ssh_keys.key.form</field>
            <field name="model">audit_ssh_keys.key</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <form string="SSH Keys">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" />
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="key_type"/>
                            <field name="key_hash"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="audit_ssh_keys.action_window">
      <field name="name">Hosts</field>
      <field name="res_model">audit_ssh_keys.host</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->
    <!--
    <record model="ir.actions.server" id="audit_ssh_keys.action_server">
      <field name="name">audit_ssh_keys server</field>
      <field name="model_id" ref="model_audit_ssh_keys_audit_ssh_keys"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
    -->

    <!-- Top menu item -->

    <menuitem name="Audit" id="audit_ssh_keys.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Hosts" id="audit_ssh_keys.menu" parent="audit_ssh_keys.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="audit_ssh_keys.menu_list" parent="audit_ssh_keys.menu"
              action="audit_ssh_keys.action_window"/>

  </data>
</odoo>